  "scoringProfiles": [
    {
      "name": "boostRecentMeetings",
      "functionAggregation": "sum",
      "text": {
        "weights": {
          "subject": 3.0,
          "summary": 2.0,
          "searchable_content": 1.0,
          "action_items": 1.5
        }
      },
      "functions": [
        {
          "fieldName": "date",
          "interpolation": "linear",
          "type": "freshness",
          "boost": 2.0,
          "freshness": {
            "boostingDuration": "P30D"
          }
        }
      ]
    }
  ],
  "suggesters": [
    {
      "name": "sg",
      "searchMode": "analyzingInfixMatching",
      "sourceFields": ["subject", "organizer"]
    }
  ],
  "corsOptions": {
    "allowedOrigins": ["*"],
    "maxAgeInSeconds": 300
  },
  "semantic": {
    "configurations": [
      {
        "name": "semantic-config",
        "prioritizedFields": {
          "titleField": {
            "fieldName": "subject"
          },
          "prioritizedContentFields": [
            {"fieldName": "summary"},
            {"fieldName": "searchable_content"}
          ],
          "prioritizedKeywordsFields": [
            {"fieldName": "organizer"}
          ]
        }
      }
    ]
  }
